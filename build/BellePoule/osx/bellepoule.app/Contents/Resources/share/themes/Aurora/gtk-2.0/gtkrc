  xthickness = 3
  ythickness = 3
}

style "theme-button" = "theme-wider"
{
  bg[NORMAL]   =  shade (1.16,@bg_color)
  bg[ACTIVE]   =  shade (0.84,@bg_color)
  bg[PRELIGHT] =  mix(0.93, shade (1.11,@bg_color), shade (1.04,@selected_bg_color))
  bg[SELECTED] =  shade (1.10,@selected_bg_color)
  engine "aurora" 
  {
	  curvature       = 2.5
  }
}

